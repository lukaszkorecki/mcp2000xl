{:paths ["src"]

 :deps {metosin/malli {:mvn/version "0.20.0"}
        metosin/jsonista {:mvn/version "0.3.13"}
        io.modelcontextprotocol.sdk/mcp {:mvn/version "0.17.0"}
        io.modelcontextprotocol.sdk/mcp-json-jackson2 {:mvn/version "0.17.0"}
        jakarta.servlet/jakarta.servlet-api {:mvn/version "6.0.0"}
        org.clojure/tools.logging {:mvn/version "1.3.0"}}

 :aliases {:dev {:extra-paths ["test"]
                 :extra-deps {org.slf4j/slf4j-simple {:mvn/version "2.0.17"}}}

           :test {:extra-paths ["test"]
                  :extra-deps {org.slf4j/slf4j-simple {:mvn/version "2.0.17"}
                               io.github.cognitect-labs/test-runner {:git/tag "v0.5.1" :git/sha "dfb30dd"}}
                  :main-opts ["-m" "cognitect.test-runner"]
                  :exec-fn cognitect.test-runner.api/test}

           :check-reflection {:extra-paths ["test"]
                              :extra-deps {org.slf4j/slf4j-simple {:mvn/version "2.0.17"}}
                              :main-opts ["-e" "(require 'mcp2000xl.tool 'mcp2000xl.resource 'mcp2000xl.server) (println \"âœ“ All namespaces loaded successfully\")"]}

           :example-stdio {:extra-paths ["dev-resources"]
                           :extra-deps {org.slf4j/slf4j-simple {:mvn/version "2.0.17"}}
                           :main-opts ["-m" "mcp2000xl.examples.stdio-server"]}

           :start-fake {:extra-paths ["dev-resources"]
                        :main-opts ["-m" "fake-server"]}}}
